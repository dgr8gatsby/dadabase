    <script async src="https://www.googletagmanager.com/gtag/js?id=G-E0PVQ1MJ4X"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-E0PVQ1MJ4X');
    </script>
</body>

</html>